.list-item.container-fluid{ id: "exercicio-#{exercicio.nome_exercicio}" }
  %tr
    %td.offset-col
    %td.exercicio-nome-col
      = exercicio.nome_exercicio
    %td.exercicio-video-col
      = link_to exercicio.video, exercicio.video
    %td.edit-col
      = link_to "Editar", edit_tipo_exercicio_path(exercicio.id), :class => "btn btn-warning"
    %td.delete-col
      = button_to "Remover", tipo_exercicio_path(exercicio.id), :method => :delete, :class => 'btn btn-danger btn-block'
